<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_videoImage"
        android:layout_width="120dp"
        android:layout_height="95dp"
        android:layout_marginTop="9dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/editbox_dropdown_dark_frame" />

    <TextView
        android:id="@+id/tv_rentalConfirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:background="@drawable/item_rental_available"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="1sp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/iv_videoImage"
        app:layout_constraintTop_toTopOf="@+id/iv_videoImage"
        android:text="백그라운드  item_rental로 시작하는걸 찾음 되요." />

    <TextView
        android:id="@+id/tv_itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/tv_rentalConfirmation"
        app:layout_constraintTop_toBottomOf="@+id/tv_rentalConfirmation"
        android:text="접이식 철제의자" />

    <TextView
        android:id="@+id/tv_townName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:lineSpacingExtra="0.5sp"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/tv_itemName"
        app:layout_constraintTop_toBottomOf="@+id/tv_itemName"
        android:text="길음동 소리마을" />

    <TextView
        android:id="@+id/tv_itemCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:lineSpacingExtra="1sp"
        android:textColor="#828282"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/tv_townName"
        app:layout_constraintTop_toBottomOf="@+id/tv_townName"
        android:text="남은개수 : 30개" />

    <View
        android:id="@+id/view9"
        android:layout_width="wrap_content"
        android:layout_height="2.5dp"
        android:layout_marginTop="9dp"
        android:background="#f2f2f2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_videoImage" />

    <ImageView
        android:id="@+id/iv_like"
        android:layout_width="21dp"
        android:layout_height="15dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/item_rental_like"
        app:layout_constraintBottom_toTopOf="@+id/view9"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:lineSpacingExtra="1sp"
        android:textColor="#828282"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/iv_like"
        app:layout_constraintStart_toEndOf="@+id/iv_like"
        app:layout_constraintTop_toTopOf="@+id/iv_like"
        android:text="1" />
</androidx.constraintlayout.widget.ConstraintLayout>