<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:background="#fff">

    <TextView
        android:id="@+id/tv_quetionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/nanum_square_b"
        android:lineSpacingExtra="0.5sp"
        android:text="대여 신청은 아무나 등록할 수 있나요?"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view36"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#f2f2f2"
        app:layout_constraintEnd_toEndOf="@+id/iv_foldUpDown"
        app:layout_constraintStart_toStartOf="@+id/tv_quetionTitle"
        app:layout_constraintTop_toBottomOf="@+id/tv_quetionTitle" />

    <ImageView
        android:id="@+id/iv_foldUpDown"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toTopOf="@+id/view36"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background_fold_updown" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_answer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#f2f2f2"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/view36"
        app:layout_constraintStart_toStartOf="@+id/view36"
        app:layout_constraintTop_toBottomOf="@+id/view36">

        <TextView
            android:id="@+id/tv_questionAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_l"
            android:lineSpacingExtra="2.5sp"
            android:text="대여 신청은 회원이라면 누구든지 신청 하실 수 있습니다.\n블라블라"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>